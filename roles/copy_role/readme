---
- name: Copier un fichier statique sur les serveurs
  hosts: all
  become: yes

  roles:
    - role: copy_file
      vars:
        copy_src: "files/example.conf"
        copy_dest: "/etc/example/example.conf"
        copy_owner: "root"
        copy_group: "root"
        copy_mode: "0644"
        copy_template: false
