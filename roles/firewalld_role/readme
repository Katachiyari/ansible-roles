---
- name: Déployer firewalld et configurer règles
  hosts: all
  become: yes

  roles:
    - role: firewalld_manage
      vars:
        firewalld_ports:
          - "80/tcp"
          - "443/tcp"
        firewalld_services:
          - ssh
        firewalld_zone: "public"
        firewalld_enabled: true
