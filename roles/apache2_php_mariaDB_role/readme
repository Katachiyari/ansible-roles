# Exemple d'utilisation du rôle Ansible apache2_php_mariaDB_role
---
- name: Déployer un stack Apache2 + PHP + MariaDB (rôle avancé)
  hosts: webservers
  become: true

  vars:
    apache2_php_mariadb_listen_port: 80
    apache2_php_mariadb_server_name: "phpapp.local"
    apache2_php_mariadb_document_root: "/var/www/phpapp"

    apache2_php_mariadb_install_server: true
    apache2_php_mariadb_db_name: "monappdb"
    apache2_php_mariadb_db_user: "monuser"
    apache2_php_mariadb_db_password: "motdepasseSecret"

  roles:
    - role: apache2_php_mariaDB_role