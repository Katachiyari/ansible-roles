# playbook d'exemple pour déployer le rôle apache
---
- name: Déploiement uniquement du rôle apache depuis la bibliothèque
  hosts: webservers
  become: true

  vars:
    apache_listen_port: 80
    apache_enable_default_site: false

    apache_vhosts:
      - server_name: "www.example.local"
        document_root: "/var/www/example"
        listen: 80
      - server_name: "test.example.local"
        document_root: "/var/www/test"
        listen: 80

  roles:
    - role: apache